{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "develop": "run-p watch storybook",
    "fix": "run-p fix:*",
    "fix:code": "run-s \"lint:code --fix\"",
    "fix:other": "run-s \"lint:other --write\"",
    "lint": "run-p lint:*",
    "lint:code": "eslint --ignore-path .gitignore \"**/*.{js,jsx}\"",
    "lint:other": "prettier --list-different --ignore-path .gitignore \"**/*.{md,json,yaml,yml}\" \"!**/*CHANGELOG.md\"",
    "prepare": "lerna run prepare --stream",
    "prepublish": "lerna run prepublish --stream",
    "storybook": "lerna run storybook --stream",
    "pretest": "run-s lint",
    "test": "echo \"No tests configured\"",
    "watch": "lerna run watch --parallel"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^7.0.2",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2"
  },
  "engines": {
    "node": ">=10.13.0"
  }
}
